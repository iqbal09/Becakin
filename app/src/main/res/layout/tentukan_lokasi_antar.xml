<?xml version="1.0" encoding="utf-8"?>
<!-- Parent linear layout with vertical orientation -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FAFAFA">



        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="25dip">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/imageView1"
                android:src="@drawable/tentuin_lokasi"
                android:layout_weight="1" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="25dip"
            android:layout_weight="1" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:text=""
                android:layout_gravity="center"
                android:src="@drawable/tentuin_lokasi"
                android:layout_weight="0.5" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#03a9f4"
                android:padding="10dp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textAlignment="center"
                android:text="Jarak : 0 Km Harga Rp.0"
                android:layout_gravity="center"
                android:src="@drawable/tentuin_lokasi"
                android:layout_weight="9"
                android:id="@+id/tv_harga" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:text=""
                android:layout_gravity="center"
                android:src="@drawable/tentuin_lokasi"
                android:layout_weight="0.5" />




        </LinearLayout>


        <!-- Child linear layout with horizontal orientation -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="25dip"
            android:paddingLeft="15dp"
            android:gravity="left">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:maxWidth="80dp"

                android:src="@drawable/dijemput_dari"
                />


        </LinearLayout>

        <!-- Child linear layout with horizontal orientation -->

        <!-- Child linear layout with horizontal orientation -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="25dip"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:gravity="left">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:layout_weight="1"
                android:layout_marginRight="20dp"
                android:src="@drawable/lokasi_merah"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:layout_weight="1"
                android:src="@drawable/pilih_lokasi_antar"
                android:id="@+id/jemput" />




        </LinearLayout>

        <!-- Child linear layout with horizontal orientation -->


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:gravity="left">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:padding="15dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textAlignment="center"
                android:text="Silahkan tekan disini untuk menentukan \n Lokasi Jemput"
                android:id="@+id/txt_lokasi_jemput" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:gravity="left">



            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:textStyle="italic"
                android:layout_weight="1"
                android:textAlignment="center"
                android:hint="Masukkan Keterangan Tambahan "
                android:id="@+id/ed_jemput" />


        </LinearLayout>





        <!-- Child linear layout with horizontal orientation -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="25dip"
            android:paddingLeft="15dp"
            android:gravity="left">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:maxWidth="70dp"
                android:src="@drawable/diantar_ke"
                />


        </LinearLayout>



        <!-- Child linear layout with horizontal orientation -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="25dip"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:gravity="left">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:layout_weight="1"
                android:layout_marginRight="20dp"
                android:src="@drawable/lokasi_hijau"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:layout_weight="1"
                android:src="@drawable/pilih_lokasi_antar"
                android:id="@+id/tujuan" />


        </LinearLayout>

        <!-- Child linear layout with horizontal orientation -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:gravity="left">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:layout_weight="1"
                android:textStyle="bold"
                android:padding="15dp"
                android:textAlignment="center"
                android:text="Silahkan tekan disini untuk menentukan \n Lokasi Tujuan"
                android:id="@+id/txt_lokasi_tujuan" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:gravity="left">



            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:textStyle="italic"
                android:layout_weight="1"
                android:textAlignment="center"
                android:hint="Masukkan Keterangan Tambahan "
                android:id="@+id/ed_tujuan" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="25dip"
            android:layout_marginBottom="50dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/button_selanjutnya"
                android:layout_weight="1"
                android:id="@+id/img_selanjutnya" />



        </LinearLayout>







    </LinearLayout>

</ScrollView>