<?xml version="1.0" encoding="utf-8" ?>
<!-- Parent linear layout with vertical orientation -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FAFAFA">



        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="25dip">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/imageView1"
                android:src="@drawable/tentuin_lokasi"
                android:layout_weight="1" />



        </LinearLayout>





        <!-- Child linear layout with horizontal orientation -->


        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="25dp">

            <EditText
                android:id="@+id/ed_input_lokasi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Cari Lokasi"
                android:padding="15dp"
                android:layout_weight="3"
                android:gravity="left"/>

            <ImageView
                android:id="@+id/btn_cari_lokasi"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:padding="15dp"
                android:src="@drawable/places_ic_search"
                android:layout_weight="1"
                android:gravity="center"/>

        </LinearLayout>

        <!-- Child linear layout with horizontal orientation -->


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/pilih_dari_peta"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:src="@drawable/pilih_peta_center"
                android:layout_weight="1" />



        </LinearLayout>

        <!-- Child linear layout with horizontal orientation -->


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp">

            <ImageView
                android:id="@+id/btn_riwayat"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:src="@drawable/btn_riwayat_pesanan"
                android:layout_weight="3" />



        </LinearLayout>


        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/becak_layout"
                android:layout_weight="0"
                android:gravity="center"/>


            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:hint="Komplek Taman Alamanda Indah Blok C29"
                android:layout_weight="1"
                android:textStyle="bold"
                android:padding="5dp"
                android:gravity="left"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:src="@drawable/panah_kanan"
                android:layout_weight="0"
                android:gravity="center"/>

        </LinearLayout>



        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/becak_layout"
                android:layout_weight="0"
                android:gravity="center"/>


            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:hint="Komplek Taman Alamanda Indah Blok C29"
                android:padding="5dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:gravity="left"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:src="@drawable/panah_kanan"
                android:layout_weight="0"
                android:gravity="center"/>

        </LinearLayout>












    </LinearLayout>

</ScrollView>