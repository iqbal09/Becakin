<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.balhood.iqbalhood.becaksampel.MainActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:id="@+id/tv_harga"
            android:text="Harga"
            android:textStyle="bold"
            android:textColor="#fff"
            android:background="#000"
            android:textSize="@dimen/abc_action_bar_content_inset_material"
            android:layout_marginTop="30dp"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Detail Jemput"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="@dimen/abc_action_bar_content_inset_material"
            android:layout_marginTop="30dp"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Lokasi Jemput"
            android:id="@+id/btn_lokasi_jemput"
            />

        <EditText
            android:id="@+id/ed_jemput"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Detail Lokasi Jemput"
            android:layout_marginBottom="70dp"
             />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Keterangan Tujuan"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="@dimen/abc_action_bar_content_inset_material" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Lokasi Tujuan"
            android:id="@+id/btn_lokasi_tujuan" />

        <EditText
            android:id="@+id/ed_tujuan"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Detail Lokasi Tujuan"
            />

        <Button
            android:id="@+id/selanjutnya"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:text="Selanjutnya" />

    </LinearLayout>



</ScrollView>