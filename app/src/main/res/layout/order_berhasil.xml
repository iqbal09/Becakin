<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.balhood.iqbalhood.becaksampel.MainActivity">
<!-- Parent linear layout with vertical orientation -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4">


    <!-- Child linear layout with horizontal orientation -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ffffff">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="ORDER SUDAH DI BUAT"
            android:textStyle="bold"
            android:textColor="#0098DA"
            android:padding="15dip"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="center"/>

    </LinearLayout>

    <!-- Child linear layout with horizontal orientation -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ffffff">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Kami akan beritahu anda ketika kami menemukan \n supir becak untuk anda"

            android:layout_weight="1"
            android:gravity="center"/>

    </LinearLayout>

    <!-- Child linear layout with horizontal orientation -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ffffff">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imageView1"
            android:src="@drawable/ceklist"
            android:layout_weight="1" />

    </LinearLayout>

    <!-- Child linear layout with horizontal orientation -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ffffff">

        <ImageView
            android:layout_marginTop="10dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/berhasil"
            android:layout_weight="1" />

    </LinearLayout>

    <!-- Child linear layout with horizontal orientation -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ffffff">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Waktu Order : Sekarang"
            android:textStyle="bold"
            android:padding="15dip"
            android:layout_weight="1"
            android:gravity="center"/>

    </LinearLayout>


    <!-- Child linear layout with horizontal orientation -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="#ffffff">

        <ImageView

            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/garis_batas"
            android:layout_weight="1" />

    </LinearLayout>

    <!-- Child linear layout with horizontal orientation -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ffffff">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:id="@+id/tahukah_anda"
            android:src="@drawable/tahukah_anda"
            android:layout_weight="1" />


    </LinearLayout>

    <!-- Child linear layout with horizontal orientation -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="#ffffff">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Di tengah perjalanan, anda boleh meminta \n ke supir becak agar berhenti sejenak\nuntuk menunggu anda belanja atau \nmelakukan urusan tertentu, maks 20 menit"
            android:padding="5dip"
            android:layout_weight="1"
            android:gravity="center"/>

    </LinearLayout>


    <!-- Child linear layout with horizontal orientation -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:background="#ffffff">

        <Button
            android:layout_marginLeft="10dp"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:background="@drawable/order_baru"
            android:padding="15dip"
            android:layout_weight="1"
            android:gravity="center"/>

        <Button
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:background="@drawable/batal_order"
            android:padding="15dip"
            android:layout_weight="1"
            android:gravity="center"/>

    </LinearLayout>




</LinearLayout>

</ScrollView>